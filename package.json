{
  "name": "template-node-script",
  "version": "1.0.0",
  "description": "Node.js script with gill (based on @solana/kit)",
  "keywords": [
    "gill",
    "node",
    "solana-kit"
  ],
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "ci": "npm run build",
    "dev": "esrun --watch src/index.ts",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "lint": "eslint .",
    "start": "cross-env NODE_OPTIONS=--disable-warning=ExperimentalWarning esrun src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/node": "^24.0.1",
    "@types/prompts": "^2.4.9",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "prettier": "^3.5.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.0"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.27.0",
    "@solana/spl-governance": "^0.3.28",
    "@solana/web3.js": "^1.98.2",
    "esrun": "^3.2.30",
    "gill": "0.10.1",
    "kleur": "^4.1.5",
    "prompts": "^2.4.2",
    "ws": "^8.18.2"
  }
}
